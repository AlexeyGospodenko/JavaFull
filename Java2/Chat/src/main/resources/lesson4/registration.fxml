            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.RegistrationController">
    <children>
        <AnchorPane layoutY="100.0" prefHeight="300.0" prefWidth="530.0" style="-fx-background-color: fafafa;"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="100.0">
            <children>
                <TextField fx:id="login" layoutX="150.0" layoutY="90.0" onAction="#register" prefHeight="30.0"
                           prefWidth="200.0" promptText="Login"
                           style="-fx-border-color: lightgreen; -fx-border-radius: 5;" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="150.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>
                <Label alignment="CENTER" contentDisplay="CENTER" depthTest="DISABLE" layoutY="15.0" prefHeight="60.0"
                       prefWidth="530.0" text="Registration" textAlignment="CENTER" textFill="#5b5555"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
                    <font>
                        <Font name="Kristen ITC" size="36.0"/>
                    </font>
                </Label>
                <TextField fx:id="password" layoutX="150.0" layoutY="150.0" onAction="#register" prefHeight="30.0"
