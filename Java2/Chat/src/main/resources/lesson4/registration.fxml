        </AnchorPane>
        <Label id="NetChat" alignment="TOP_CENTER" layoutX="1.0" prefHeight="100.0" prefWidth="380.0" text="NetChat"
               textAlignment="CENTER" textFill="WHITE" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Kristen ITC" size="48.0"/>
            </font>
        </Label>
        <Button contentDisplay="CENTER" layoutX="336.0" layoutY="35.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="150.0" style="-fx-background-color: FFA700;" text="Exit" textAlignment="JUSTIFY"
                textFill="WHITE">
